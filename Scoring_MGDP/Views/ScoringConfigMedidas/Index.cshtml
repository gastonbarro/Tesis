@model PagedList.IPagedList<Scoring_MGDP.ViewModel.ScoringConfigMedidasViewModel>
@using PagedList.Mvc;

<link href="/Content/PagedList.css" rel="stylesheet" type="text/css" />

<div class="col-sm-12" style="background: white;">
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

    <h2 class="azul sombraTexto textoCentro">Configuración Pesos Medidas</h2>

    <p>
        @Html.ActionLink("Nueva Medida", "Create", "ScoringConfigMedidas", null, new { @class = "modal-link btn btn-primary" })
    </p>
    <div class="visible-md visible-lg col-md-10">
        <table class="table table-striped table-sm">
            <tr class="active text-center">
                <th>
                    Medida
                </th>
                <th>
                    Peso
                </th>
                <th>
                    Ámbito
                </th>
                <th>
                    Tipo
                </th>
                <th>
                    Acciones
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Metrica)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Peso)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ambito)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tipo)
                    </td>
                    <td class="text-center">
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "modal-link btn btn-primary btn-sm" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "modal-link btn btn-primary btn-sm" })
                    </td>
                </tr>
            }

        </table>
        <br />
        Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("Index",
                new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
    </div>
</div>
