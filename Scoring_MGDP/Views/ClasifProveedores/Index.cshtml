@model PagedList.IPagedList<Scoring_MGDP.ViewModel.ClasifProveedoresViewModel>
@using PagedList.Mvc;

<link href="/Content/PagedList.css" rel="stylesheet" type="text/css" />

<div class="col-sm-12" style="background: white;">
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

    <h3 align="center">Clasificación de proveedor</h3>   
    <p>
        @Html.ActionLink("Nueva Clasificación", "Create", "ClasifProveedores", null, new { @class = "modal-link btn btn-primary" })
        @*@Html.ActionLink("Nuevo proveedor", "Create", "Proveedores", null, new { @class = "modal-link btn btn-primary" })*@
    </p>
    <div class="visible-md visible-lg col-md-6">
        <table class="table table-striped table-sm">
            <tr class="active text-center">
                <th class="text-center">
                    Clasificación
                </th>
                <th class="text-center">
                    Acción
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClasificacionProv)
                    </td>
                    <td class="text-center">
                        @Html.ActionLink("Editar", "Edit", "ClasifProveedores", new { id = item.Id }, new { @class = "modal-link btn btn-primary btn-sm" })
                        @*@Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                    </td>
                </tr>
            }

        </table>

        <br />
        Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("Index",
                new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))

    </div>
</div>