@model PagedList.IPagedList<Scoring_MGDP.ViewModel.MedicionesMetricasViewModel>
@using PagedList.Mvc;

<link href="/Content/PagedList.css" rel="stylesheet" type="text/css" />

<div class="col-sm-12" style="background: white;">
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

    <h2 class="azul sombraTexto textoCentro">Contratos de proveedores</h2>
    <p>
        @*@Html.ActionLink("Nuevo Contrato", "Create","ContratoProv", null, new { @class = "modal-link btn btn-primary" })*@
        @Html.ActionLink("Nueva medición", "Create", "MedicionesMetricas", new { proveedorId = ViewBag.ProveedorId }, new { @class = "modal-link btn btn-primary btn-sm" })
    </p>

    @using (Html.BeginForm("Index", "Medicion", FormMethod.Get, new { @class = "form-inline" }))
    {


        <div class="visible-md visible-lg col-md-12">
            <div class="input-group col-md-6">
                @Html.DropDownList("search", ViewBag.ProveedoresList as SelectList, "Seleccionar", htmlAttributes: new { @class = "form-control" })
                <span class="input-group-btn">
                    <button class="btn btn-secondary btn-sm" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                </span>
            </div>
        </div>
        <br />
        <br />
    }

    <div class="visible-md visible-lg col-md-12">
        <table class="table table-striped table-sm">
            <tr class="active text-center">
                <th>
                    @Html.DisplayNameFor(model => model.FechaMedicion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValorMedido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Calculado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cump_Ratio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Calcula_RatioSN)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DefMetricas.Clave)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TiposProyectos.DescTipoProyecto)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaMedicion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorMedido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Calculado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cump_Ratio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Calcula_RatioSN)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DefMetricas.Clave)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TiposProyectos.DescTipoProyecto)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.id_Medicion_Metrica }) |
                        @Html.ActionLink("Details", "Details", new { id = item.id_Medicion_Metrica }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.id_Medicion_Metrica })
                    </td>
                </tr>
            }

        </table>
        <br />
        Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("Index",
                new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
    </div>
</div>