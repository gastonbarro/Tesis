@model PagedList.IPagedList<Scoring_MGDP.ViewModel.MedicionesMetricasViewModel>
@using PagedList.Mvc;

<link href="/Content/PagedList.css" rel="stylesheet" type="text/css" />

<div class="col-sm-12" style="background: white;">
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

    <h2 class="azul sombraTexto textoCentro">Medición de Métricas</h2>
    <p>
        @Html.ActionLink("Nueva medición", "Create", "MedicionesMetricas", null, new { @class = "modal-link btn btn-primary" })
        @*@Html.ActionLink("Nueva medición", "Create", "MedicionesMetricas", new { proveedorId = ViewBag.ProveedorId }, new { @class = "modal-link btn btn-primary btn-sm" })*@
    </p>

    @using (Html.BeginForm("Index", "Medicion", FormMethod.Get, new { @class = "form-inline" }))
    {


        <div class="visible-md visible-lg col-md-12">
            <div class="input-group col-md-6">
                @*@Html.DropDownList("search", ViewBag.ProveedoresList as SelectList, "Seleccionar", htmlAttributes: new { @class = "form-control" })*@
                <span class="input-group-btn">
                    <button class="btn btn-secondary btn-sm" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                </span>
            </div>
        </div>
        <br />
        <br />
    }

    <div class="visible-md visible-lg col-md-12">
        <table class="table table-striped table-sm">
            <tr class="active text-center">
                <th>
                    Fecha Medición
                </th>
                <th>
                    Valor Medido
                </th>
                <th>
                    ¿Calculado?
                </th>
                <th>
                    ¿Cumple ratio?
                </th>
                <th>
                    ¿Ratio calculado?
                </th>
                <th>
                    Definición métrica
                </th>
                <th>
                    Descripción Proyecto
                </th>
                <th>
                    Acciones
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaMedicion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorMedido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Calculado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ratio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RatioSiNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DefMetricasViewModel.IdDefMetrica)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TiposProyectosViewModel.Descripcion)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", "MedicionesMetricas", new { id = item.IdDefMetrica }, new { @class = "modal-link btn btn-primary btn-sm" })
                        @Html.ActionLink("Eliminar", "Delete", "MedicionesMetricas", new { id = item.IdDefMetrica }, new { @class = "modal-link btn btn-primary btn-sm" })
                    </td>
                </tr>
            }

        </table>
        <br />
        Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("Index",
                new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
    </div>
</div>