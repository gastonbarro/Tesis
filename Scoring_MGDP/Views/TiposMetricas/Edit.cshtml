@model Scoring_MGDP.ViewModel.TiposMetricasViewModel

<div class="modal-content">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4 align="center">Actualilizar Tipo de Métrica</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.TipoMetrica, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-7">
                    @Html.EditorFor(model => model.TipoMetrica, new { htmlAttributes = new { @class = "form-control", required = "required"} })
                    @Html.ValidationMessageFor(model => model.TipoMetrica, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-10 col-md-5">
                    <input type="submit" value="Guardar" class="btn btn-primary" id="approve-btn" />
                </div>
            </div>
        </div>
    }

</div>

<script type="text/javascript">
    $(function () {
        $('#approve-btn').click(function () {
            $('#modal-container').modal('hide');
        });
    });
</script>

