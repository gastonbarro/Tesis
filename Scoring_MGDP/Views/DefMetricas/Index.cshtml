@model PagedList.IPagedList<Scoring_MGDP.ViewModel.DefMetricasViewModel>
@using PagedList.Mvc;

<link href="/Content/PagedList.css" rel="stylesheet" type="text/css" />

<div class="col-sm-12" style="background: white;">
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

    <h2 class="azul sombraTexto textoCentro">Definición de Métricas</h2>
    <p>
        @*@Html.ActionLink("Nueva definición", "Create", "DefMetricas", null, new { @class = "modal-link btn btn-primary" })*@
        @Html.ActionLink("Nueva definición", "Create", "DefMetricas", new { proveedorId = ViewBag.ProveedorId }, new { @class = "modal-link btn btn-primary btn-sm" })
    </p>

    @using (Html.BeginForm("Index", "DefMetricas", FormMethod.Get, new { @class = "form-inline" }))
    {


        <div class="visible-md visible-lg col-md-12">
            <div class="input-group col-md-12"> 
                <span class="input-group-btn col-md-12">
                    @Html.DropDownList("proveedorId", ViewBag.ProveedoresList as SelectList, "Seleccionar", htmlAttributes: new { @class = "form-control" })
                    @Html.DropDownList("metricaId", ViewBag.MetricasList as SelectList, "Seleccionar", htmlAttributes: new { @class = "form-control" })
                    <button class="btn btn-secondary btn-md" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                </span>
        </div>
        </div>
        <br />
        <br />
    }

    <div class="visible-md visible-lg col-md-12">
        <table class="table table-striped table-sm">
            <tr class="active text-center">
                <th>
                    Fecha desde
                </th>
                <th>
                    Fecha hasta
                </th>
                <th>
                    Clave
                </th>
                <th>
                    Ratio
                </th>
                <th>
                    Peso ponderado
                </th>
                <th>
                    Peso
                </th>
                <th>
                    Objtivo Crítico
                </th>
                <th>
                    Objetivo Mínimo
                </th>
                <th>
                    Objetivo Exclencia
                </th>
                <th>
                    ¿HUB?
                </th>
                <th>
                    Metrica
                </th>
                <th>
                    Proveedor
                </th>
                <th>
                    Desc. Proyecto
                </th>
                <th>
                    Visión
                </th>
                <th>
                    Acciones
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaDesde)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaHasta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Clave)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ratio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PesoPonderado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Peso)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ObjCritico)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ObjMinimo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ObjExcelencia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HubNoHub)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MetricasViewModel.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProveedorViewModel.NombreProveedor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TiposProyectosViewModel.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VisionViewModel.Descripcion)
                    </td>
                    <td>
                        @Html.ActionLink("Detalles", "Details", new { id = item.IdDefMetrica }, new { @class = "modal-link btn btn-primary btn-sm" })
                        @Html.ActionLink("Editar", "Edit", new { id = item.IdDefMetrica }, new { @class = "modal-link btn btn-primary btn-sm" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.IdDefMetrica }, new { @class = "modal-link btn btn-primary btn-sm" })
                    </td>
                </tr>
            }

        </table>
        <br />
        Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("Index",
                new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
    </div>
</div>