@model Scoring_MGDP.ViewModel.MetricasViewModel

<div class="modal-content">
    <h4 align="center">¿Está seguro de eliminar esta métrica?</h4>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Sigla)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Sigla)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Descripcion)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TiposMetricasViewModel.TipoMetrica)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TiposMetricasViewModel.TipoMetrica)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UnidadesMedidasViewModel.UnidadMedida)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UnidadesMedidasViewModel.UnidadMedida)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <div class="col-md-offset-10 col-md-5">
                    <input type="submit" value="Borrar" class="btn btn-primary" id="approve-btn" />
                    <br />
                    <br />
                </div>
            </div>
            <br />
        }
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#approve-btn').click(function () {
            $('#modal-container').modal('hide');
        });
    });
</script>
